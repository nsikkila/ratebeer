<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navibar">
  <%= link_to 'Breweries', breweries_path %>
  <%= link_to 'Beers', beers_path %>
  <%= link_to 'Ratings', ratings_path %>
  <%= link_to 'Beer Clubs', beer_clubs_path %>
  <%= link_to 'Users', users_path %>
  <%= link_to 'Places', places_path %>
   |Â 
  <% if not current_user.nil? %>
    <%= link_to "#{current_user.username}", user_path(current_user.id) %>
    <%= link_to "Rate a beer", new_rating_path %>
    <%= link_to "Join a club", new_membership_path %>
    <%= link_to "Sign out", session_path(current_user.id), method: :delete %>
  <% else %>
    <%= link_to "Sign in", new_session_path %>
    <%= link_to "Sign up", new_user_path %>
  <% end %>
</div>



<%= yield %>

</body>
</html>
