<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2>Members:</h2>
<ul>
<% @beer_club.users.each do | u | %>
    <li><%=link_to "#{u.username}", u %></li>
      <% end %>
</ul>

<% if current_user %>
    <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id, :value => @beer_club.id %>
        <%= f.submit value:'Join the club' %>
    <% end %>
<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) unless current_user.nil? %> |
<%= link_to 'Back', beer_clubs_path %>
